#include <stdio.h>
#include <stdlib.h>

int main() 
{
     int unit;
     double price=23.34,total; //double price=23.34-> ,double price=23.34,total
     printf("請問您要買幾瓶蘋果汁? ");
     scanf("%d", &unit);//unit-> &unit
     total = unit*price;
     printf("我買了%d瓶100%的蘋果汁\n", unit);//%d-> %f
     printf("花了%f元", total);
     return 0;
}
